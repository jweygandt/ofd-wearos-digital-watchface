<!--
    ImageView to load preview of watch face.
-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/analog_complication_settings_preview_size"
    android:layout_height="@dimen/analog_complication_settings_preview_size"
    tools:context=".editor.WatchFaceConfigActivity">


    <ImageView
        android:id="@+id/watch_face_background"
        android:layout_width="@dimen/analog_complication_settings_preview_size"
        android:layout_height="@dimen/analog_complication_settings_preview_size"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/black"
        android:contentDescription="@string/activity_config_screenshot_content_description"
        android:padding="@dimen/watch_face_preview_background_padding"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/left_complication"
        android:layout_width="40dp"
        android:layout_height="160dp"
        android:background="@android:color/transparent"
        android:contentDescription="101"
        android:onClick="onClick101"
        app:layout_constraintEnd_toStartOf="@+id/right_complication"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#2196F3"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/right_complication"
        android:layout_width="40dp"
        android:layout_height="160dp"
        android:background="@android:color/transparent"
        android:contentDescription="102"
        android:onClick="onClick102"
        app:layout_constraintEnd_toStartOf="@+id/m104"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/left_complication"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#2196F3"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/middle_complication"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="65dp"
        android:background="@android:color/transparent"
        android:contentDescription="103"
        android:onClick="onClick103"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/m111"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#2196F3"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/m104"
        android:layout_width="40dp"
        android:layout_height="160dp"
        android:background="@android:color/transparent"
        android:contentDescription="104"
        android:onClick="onClick104"
        app:layout_constraintEnd_toStartOf="@+id/m105"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/right_complication"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#2196F3"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/m105"
        android:layout_width="40dp"
        android:layout_height="160dp"
        android:background="@android:color/transparent"
        android:contentDescription="105"
        android:onClick="onClick105"
        app:layout_constraintEnd_toStartOf="@+id/m106"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/m104"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#2196F3"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/m106"
        android:layout_width="40dp"
        android:layout_height="160dp"
        android:background="@android:color/transparent"
        android:contentDescription="106"
        android:onClick="onClick106"
        app:layout_constraintEnd_toStartOf="@+id/m107"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/m105"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#2196F3"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/m107"
        android:layout_width="40dp"
        android:layout_height="160dp"
        android:background="@android:color/transparent"
        android:contentDescription="107"
        android:onClick="onClick107"
        app:layout_constraintEnd_toStartOf="@+id/m108"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/m106"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#2196F3"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/m108"
        android:layout_width="40dp"
        android:layout_height="160dp"
        android:background="@android:color/transparent"
        android:contentDescription="108"
        android:onClick="onClick108"
        app:layout_constraintEnd_toStartOf="@+id/m109"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/m107"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#2196F3"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/m109"
        android:layout_width="40dp"
        android:layout_height="160dp"
        android:background="@android:color/transparent"
        android:contentDescription="109"
        android:onClick="onClick109"
        android:text="B109"
        app:layout_constraintEnd_toStartOf="@+id/m110"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/m108"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#2196F3"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/m110"
        android:layout_width="40dp"
        android:layout_height="160dp"
        android:background="@android:color/transparent"
        android:contentDescription="110"
        android:onClick="onClick110"
        app:layout_constraintEnd_toStartOf="@+id/m112"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/m109"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#2196F3"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/m112"
        android:layout_width="40dp"
        android:layout_height="160dp"
        android:background="@android:color/transparent"
        android:contentDescription="112"
        android:onClick="onClick112"
        app:layout_constraintEnd_toStartOf="@+id/m111"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/m110"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#2196F3"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/m111"
        android:layout_width="40dp"
        android:layout_height="160dp"
        android:background="@android:color/transparent"
        android:contentDescription="111"
        android:onClick="onClick111"
        app:layout_constraintEnd_toStartOf="@+id/middle_complication"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/m112"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#2196F3"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onCl"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <!--     TODO (codingjeremy): Add mask for screenshot and clean up UI. -->
</androidx.constraintlayout.widget.ConstraintLayout>
